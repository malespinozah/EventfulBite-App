@{
    ViewBag.Title = "Create";
}

<h2>Adding New Event</h2>

<form action="/Event/Add" method="post">
    <div>
        <label for="EventName">Event Name:</label>
        <input type="text" name="EventName" id="EventName" />
    </div>
    <div>
        <label for="EventDescription">Event Description:</label>
        <input type="text" name="EventDescription" id="EventDescription" />
    </div>
    <div>
        <label for="EventDate">Event Date:</label>
        <input type="datetime-local" name="EventDate" id="EventDate" />
    </div>
    <div>
        <label for="EventPrice">Event Price:</label>
        <input type="number" name="EventPrice" id="EventPrice" step="0.1" />
    </div>
    <div>
        <label for="EventAddress">Event Address: </label>
        <input type="text" name="EventAddress" id="EventAddress" />
    </div>
    <div>
        <label for="DistrictId">District Id: </label>
        <select id="DistrictId" name="DistrictId">
            <option value=""></option>
            <option value="1">Markham</option>
            <option value="2">North York</option>
            <option value="3">Scarborough</option>
            <option value="4">Mississauga</option>
            <option value="5">Brampton</option>
            <option value="6">Vaughan</option>
            <option value="7">Richmond Hill</option>
            <option value="8">Toronto</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Add Event" />
    </div>
</form>